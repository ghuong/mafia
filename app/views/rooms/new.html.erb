<div class="center">
  <h1>New Room</h1>
  
  <%= form_tag rooms_path, id: 'new_user' do %>
    <div id='name-fields'>
      <%= label_tag :name, "What's your actual name?", id: 'name-label' %>
      <%= text_field_tag :name, "", class: 'form-control', placeholder: "Your Name", id: 'name-field', autofocus: true %>
    </div>
    <%= submit_tag "GO", id: 'submit', class: "btn btn-lg btn-default btn-gray" %>
  <% end %>
</div>