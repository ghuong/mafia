<div class="center">
  <h1>Mafia</h1>

  <div class="Aligner">
    <%= form_for(@room, url: join_path, html: { id: "join-room-form" }) do |f| %>
      <%= render 'shared/error_messages', object: @room %>
      

      <div class="flex-container">
        <div class="flex-item-1">
          <%= f.text_field :code, class: 'form-control', placeholder: "Room", maxlength: 4 %>
        </div>
        <div class="flex-item-2">
          <%= f.submit "GO", id: "join-room", class: "btn btn-lg btn-default btn-gray" %>
        </div>
      </div>
      
    <% end %>
  </div>

  <%= link_to "New Room", new_room_path, id: "new-room", class: "btn btn-lg btn-default btn-block btn-gray" %>
  <%= link_to "How to Play", help_path, id: "btnHelp", class: "btn btn-lg btn-default btn-block btn-gray" %>
</div>