<%= form_tag actions_path(params[:room_code]), id: 'actions-form', namespace: 'actions' do %>
  <%= hidden_field_tag :is_ready, !is_ready %>
  <%= render partial: 'action', collection: action_options %>
  <%= submit_tag "Ready", id: "submit-actions", class: "btn btn-lg btn-primary", data: { disable_with: false } %>
<% end %>